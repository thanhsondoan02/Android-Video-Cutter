<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name=".VideoCutterApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VideoCutter"
        tools:targetApi="31">

        <activity
            android:name=".presentation.widget.video.TestActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".presentation.cutvideo.CutVideoActivity"
            android:exported="false" />

        <activity
            android:name=".presentation.select.selectlibrary.SelectLibraryFolderActivity"
            android:exported="false" />

        <activity
            android:name=".presentation.home.mystudio.MyStudioActivity"
            android:exported="false" />

        <activity
            android:name=".presentation.select.selectvideo.SelectVideoActivity"
            android:exported="false" />

        <activity
            android:name=".presentation.adjust.AdjustActivity"
            android:exported="false" />

        <activity
            android:name=".presentation.home.setting.SettingActivity"
            android:exported="false" />

    </application>

</manifest>
